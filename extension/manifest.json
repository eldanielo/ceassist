{
  "manifest_version": 3,
  "name": "CE AI Assist",
  "version": "1.0",
  "description": "Transcribe audio from a Chrome tab using Google Cloud Speech-to-Text.",
  "permissions": [
    "tabCapture",
    "activeTab",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "offscreen.html", "transcription.html" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}